<% content_for :header_title, 'Navigation' %>

<% content_for :form_card_title, 'Form Section Navigation' %>

<% content_for :form_card_body do %>
  <div class="slab">
    <% FormNavigation.screens_index.each do |group_header, forms| %>
      <h3>
        <%= group_header %>
      </h3>

      <% forms.each do |form| %>
        <div>
          <%= link_to form.to_param.titleize,
            section_path(form.to_param),
            class: 'button button--small button--full-mobile' %>
        </div>
      <% end %>
    <% end %>
  </div>
<% end %>

