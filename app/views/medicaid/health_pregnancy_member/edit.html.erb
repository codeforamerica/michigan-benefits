<% content_for :header_title, "Quick Health Questions" %>

<div class="form-card">
  <header class="form-card__header">
    <div class="form-card__title">
      Tell us who has been pregnant recently.
    </div>
    <p class="text--help text--centered">
      Currently pregnant or pregnant in the past three months.
    </p>
  </header>

  <div class="form-card__content">
    <%= form_for @step,
      as: :step,
      builder: MbFormBuilder,
      url: current_path,
      method: :put do |f| %>

      <%= f.mb_form_errors :recently_pregnanct %>
      <fieldset class="form-group">
        <% @step.female_members.each do |member| %>
          <%= f.fields_for("members[]", member) do |ff| %>
            <%= ff.mb_checkbox(
              :new_mom,
              member.display_name,
              { checked_value: "1", unchecked_value: "0" },
            ) %>
          <% end %>
        <% end %>
      </fieldset>

     <%= render "medicaid/next_step" %>
    <% end %>
  </div>
</div>
