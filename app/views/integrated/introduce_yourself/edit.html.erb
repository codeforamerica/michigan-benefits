<% content_for :header_title, "Introduction" %>

<% content_for :form_card_title, "To start, please introduce yourself." %>

<% content_for :form_card_body do %>
  <%= fields_for(:form, @form, builder: MbFormBuilder) do |f| %>
    <%= f.hidden_field :relationship, value: "primary" %>
    <%= f.mb_input_field :first_name,
      "What's your first name?",
      autofocus: true %>
    <%= f.mb_input_field :last_name, "What's your last name?" %>
    <%= f.mb_date_input :birthday,
      "When is your birthday?",
      help_text: "For example: 4 28 1970" %>
    <%= f.mb_radio_set :sex,
      label_text: "What's your sex?",
      collection: [{ value: :male, label: "Male" }, { value: :female, label: "Female" }],
      help_text: "As it appears on your ID",
      layouts: ["inline"] %>
    <%= f.mb_radio_set :previously_received_assistance,
      label_text: "Have you received assistance in Michigan in the past (or currently)?",
      collection: [{ value: :yes, label: "Yes" }, { value: :no, label: "No" }],
      layouts: ["inline"] %>
  <% end %>
<% end %>
