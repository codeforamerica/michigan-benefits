<% content_for :header_title, "Introduction" %>
<% content_for :form_card_title, "What's your home address?" %>

<% content_for :form_card_body do %>
    <%= fields_for(:form, @form, builder: MbFormBuilder) do |f| %>
      <%= render "shared/address", f: f %>
      <div class="tooltip" <%= tooltip_title "Reducing the amount of duplicate information the Applicant has to enter also reduces the opportunity for errors." %>></div>
      <%= f.mb_radio_set :residential_mailing_same,
                         label_text: "Is this also your mailing address?",
                         collection: [{ value: "true", label: "Yes" }, { value: "false", label: "No" }],
                         layouts: ["inline"] %>
    <% end %>
<% end %>
