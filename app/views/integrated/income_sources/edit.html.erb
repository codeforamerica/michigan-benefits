<% content_for :header_title, "Income and Employment" %>
<% content_for :form_card_title, t(".title", **member_appropriate_translation_data) %>
<% content_for :form_card_help, "Check all that apply." %>

<% content_for :form_card_body do %>
  <%= fields_for(:form, @form, builder: MbFormBuilder) do |f| %>
    <%= f.hidden_field :id %>

    <%= f.mb_checkbox_set_with_none(:income_sources,
      income_sources.map { |key, label|
        { method: key, label: label }
      },
      label_text: t(".title", **member_appropriate_translation_data)) %>

  <% end %>
<% end %>
